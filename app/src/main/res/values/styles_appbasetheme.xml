<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="EditTextAppBaseTheme" parent="android:Widget.EditText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBoxAppBaseTheme" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/appbasetheme_btn_check_holo_light</item>
    </style>

    <style name="RadioButtonAppBaseTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/appbasetheme_btn_radio_holo_light</item>
    </style>

    <style name="ButtonAppBaseTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/appbasetheme_btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButtonAppBaseTheme" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/appbasetheme_btn_default_holo_light</item>
    </style>

    <style name="SpinnerAppBaseTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/appbasetheme_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/appbasetheme_list_selector_holo_light</item>
    </style>

    <style name="SpinnerDropDownItemAppBaseTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/appbasetheme_btn_radio_holo_light</item>
    </style>

    <style name="SpinnerMaterial" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/abc_spinner_mtrl_am_alpha_cust</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ListViewAppBaseTheme" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/appbasetheme_list_selector_holo_light</item>
    </style>

    <style name="ListViewAppBaseTheme.White" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/appbasetheme_list_selector_holo_light</item>
    </style>

    <style name="SpinnerItemAppBaseTheme" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

</resources>