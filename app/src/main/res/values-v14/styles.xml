<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ActionBar.Solid.AppBaseTheme" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/actionbar_background</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_appbasetheme</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_apptheme</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:subtitleTextStyle">@style/MyActionBarSubTitleText</item>
    </style>

    <style name="Theme.Apptheme.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.AppBaseTheme</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.AppBaseTheme</item>
    </style>

    <style name="EditTextAppBaseTheme" parent="android:Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

</resources>