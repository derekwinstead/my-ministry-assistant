<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:id="@+id/create_bu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/material_corner_radius"
        card_view:contentPadding="@dimen/default_padding" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/pref_backup_title"
                android:paddingEnd="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:src="@drawable/ic_db_create_light" />

            <TextView
                android:id="@+id/tv11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/img1"
                android:layout_toRightOf="@id/img1"
                android:text="@string/pref_backup_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/bg_card_title_text_holo_light" />

            <TextView
                android:id="@+id/tv12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv11"
                android:layout_toEndOf="@id/img1"
                android:layout_toRightOf="@id/img1"
                android:text="@string/pref_backup_summary"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/bg_card_default_text" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cleanup_bu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/material_corner_radius"
        card_view:contentPadding="@dimen/default_padding" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/pref_clear_title"
                android:paddingEnd="@dimen/default_padding"
                android:paddingRight="@dimen/default_padding"
                android:src="@drawable/ic_action_discard_light" />

            <TextView
                android:id="@+id/tv31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/img3"
                android:layout_toRightOf="@id/img3"
                android:text="@string/pref_clear_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/bg_card_title_text_holo_light" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv31"
                android:layout_toEndOf="@id/img3"
                android:layout_toRightOf="@id/img3"
                android:text="@string/pref_clear_summary"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/bg_card_default_text" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>