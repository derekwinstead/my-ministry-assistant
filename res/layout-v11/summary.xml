<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/material_corner_radius" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/default_padding_half"
            android:paddingLeft="@dimen/default_padding"
            android:paddingRight="@dimen/default_padding"
            android:paddingTop="@dimen/default_padding_half" >

            <include layout="@layout/summary_navigation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:divider="@drawable/separator"
                android:orientation="vertical"
                android:showDividers="middle" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/default_padding" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/total_time"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/total_hours_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/inner_padding" >

                    <TextView
                        android:id="@+id/rbc_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/rbc_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/inner_padding" >

                    <TextView
                        android:id="@+id/tv_pub_text_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/tv_pub_count_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/inner_padding" >

                    <TextView
                        android:id="@+id/tv_pub_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/tv_pub_count_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/inner_padding" >

                    <TextView
                        android:id="@+id/tv_pub_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/tv_pub_count_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/inner_padding" >

                    <TextView
                        android:id="@+id/tv_pub_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/tv_pub_count_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/inner_padding" >

                    <TextView
                        android:id="@+id/tv_pub_text_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/tv_pub_count_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/inner_padding" >

                    <TextView
                        android:id="@+id/return_visits_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/return_visits_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/inner_padding"
                    android:paddingTop="@dimen/inner_padding" >

                    <TextView
                        android:id="@+id/bible_studies_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsizeMD" />

                    <TextView
                        android:id="@+id/bible_studies_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/appbasetheme_color"
                        android:textIsSelectable="false"
                        android:textSize="@dimen/textsizeMD"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>